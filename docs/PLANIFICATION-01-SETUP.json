{
  "phase": "01",
  "nom": "SETUP PROJET",
  "description": "Configuration initiale Angular 20, palette Modern Editorial, structure src/",
  "objectif": "Créer structure de base, config TypeScript strict, styles globaux, routes principales",
  
  "prerequis": [
    "Node.js 18+",
    "Angular CLI 20 (npm install -g @angular/cli@latest)",
    "Git configuré"
  ],
  
  "workflow": {
    "regles_absolues": [
      "1 FICHIER = 1 MESSAGE = 1 ARTEFACT",
      "Code COMPLET (jamais '...reste du code')",
      "STOP après chaque fichier → ATTENDRE validation '✓ OK'",
      "Ordre strict des fichiers",
      "TypeScript strict (aucun 'any')"
    ]
  },
  
  "fichiers": [
    {
      "ordre": 1,
      "nom": "package.json",
      "path": "package.json",
      "type": "Configuration",
      "description": "Dépendances npm Angular 20",
      "dependances": [
        "@angular/core@^20.0.0",
        "@angular/common@^20.0.0",
        "@angular/router@^20.0.0",
        "@angular/forms@^20.0.0",
        "@angular/platform-browser@^20.0.0",
        "rxjs@^7.8.0",
        "tslib@^2.6.0"
      ],
      "scripts": {
        "start": "ng serve",
        "build": "ng build",
        "build:prod": "ng build --configuration production"
      },
      "instructions": [
        "Fichier complet avec toutes dépendances",
        "Scripts dev et prod",
        "Version Angular 20 latest"
      ]
    },
    
    {
      "ordre": 2,
      "nom": "tsconfig.json",
      "path": "tsconfig.json",
      "type": "Configuration",
      "description": "TypeScript config avec mode strict activé",
      "regles": {
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
      },
      "paths": {
        "@app/*": ["src/app/*"],
        "@core/*": ["src/core/*"],
        "@shared/*": ["src/shared/*"],
        "@features/*": ["src/features/*"]
      },
      "instructions": [
        "Mode strict OBLIGATOIRE",
        "Paths alias configurés",
        "Target ES2022"
      ]
    },
    
    {
      "ordre": 3,
      "nom": "angular.json",
      "path": "angular.json",
      "type": "Configuration",
      "description": "Configuration workspace Angular",
      "configurations": [
        "development: sourceMap enabled",
        "production: optimization, minification, budget limits"
      ],
      "instructions": [
        "Projet 'plan-and-co'",
        "Styles globaux: src/styles.scss",
        "Assets: public/",
        "Budget warnings configurés"
      ]
    },
    
    {
      "ordre": 4,
      "nom": "tsconfig.app.json",
      "path": "tsconfig.app.json",
      "type": "Configuration",
      "description": "TypeScript config app",
      "instructions": [
        "Extend tsconfig.json",
        "Files: main.ts inclus",
        "Exclude: tests, node_modules"
      ]
    },
    
    {
      "ordre": 5,
      "nom": ".gitignore",
      "path": ".gitignore",
      "type": "Configuration",
      "description": "Fichiers ignorés Git",
      "elements": [
        "node_modules/",
        "dist/",
        ".angular/",
        ".env",
        ".env.local",
        "*.log"
      ]
    },
    
    {
      "ordre": 6,
      "nom": "environment.ts",
      "path": "src/environments/environment.ts",
      "type": "Configuration",
      "description": "Variables environnement dev",
      "variables": {
        "production": false,
        "apiUrl": "http://localhost:3000/api",
        "supabaseUrl": "YOUR_SUPABASE_URL",
        "supabaseKey": "YOUR_SUPABASE_ANON_KEY"
      },
      "instructions": [
        "Interface Environment typée",
        "Valeurs dev",
        "Commentaires pour clés"
      ]
    },
    
    {
      "ordre": 7,
      "nom": "environment.prod.ts",
      "path": "src/environments/environment.prod.ts",
      "type": "Configuration",
      "description": "Variables environnement prod",
      "variables": {
        "production": true,
        "apiUrl": "https://planandco-api.onrender.com/api",
        "supabaseUrl": "YOUR_SUPABASE_URL",
        "supabaseKey": "YOUR_SUPABASE_ANON_KEY"
      },
      "instructions": [
        "Mêmes variables que dev",
        "production: true",
        "URL API production"
      ]
    },
    
    {
      "ordre": 8,
      "nom": "index.html",
      "path": "src/index.html",
      "type": "HTML",
      "description": "Point d'entrée HTML",
      "elements": [
        "Meta tags (charset, viewport, description)",
        "Title: Plan & Co | Expert Copywriting",
        "Preconnect fonts: Inter + Playfair Display",
        "Base href='/'",
        "<app-root></app-root>"
      ],
      "instructions": [
        "HTML5 sémantique",
        "Meta description SEO",
        "Google Fonts preconnect"
      ]
    },
    
    {
      "ordre": 9,
      "nom": "main.ts",
      "path": "src/main.ts",
      "type": "TypeScript",
      "description": "Bootstrap application Angular",
      "imports": [
        "bootstrapApplication from @angular/platform-browser",
        "App from './app/app'",
        "appConfig from './app/app.config'"
      ],
      "instructions": [
        "Bootstrap standalone",
        "Import App et appConfig",
        "Gestion erreur .catch()"
      ]
    },
    
    {
      "ordre": 10,
      "nom": "app.config.ts",
      "path": "src/app/app.config.ts",
      "type": "TypeScript",
      "description": "Configuration app (providers)",
      "providers": [
        "provideRouter(routes)",
        "provideHttpClient()",
        "provideAnimations()"
      ],
      "instructions": [
        "Export const appConfig: ApplicationConfig",
        "Providers: router, http, animations",
        "Importer routes depuis app.routes.ts"
      ]
    },
    
    {
      "ordre": 11,
      "nom": "app.routes.ts",
      "path": "src/app/app.routes.ts",
      "type": "TypeScript",
      "description": "Routes principales",
      "routes": [
        "{ path: '', loadChildren: () => import('./features/home/routes/home.routes') }",
        "{ path: 'blog', loadChildren: () => import('./features/blog/routes/blog.routes') }",
        "{ path: 'contact', loadChildren: () => import('./features/contact/routes/contact.routes') }",
        "{ path: 'admin', loadChildren: () => import('./features/admin/routes/admin.routes'), canActivate: [authGuard] }",
        "{ path: '**', redirectTo: '' }"
      ],
      "instructions": [
        "Type Routes from @angular/router",
        "Lazy loading avec loadChildren",
        "Admin protégé authGuard",
        "Wildcard redirect home"
      ]
    },
    
    {
      "ordre": 12,
      "nom": "app.ts",
      "path": "src/app/app.ts",
      "type": "Component",
      "description": "Composant racine",
      "structure": {
        "selector": "app-root",
        "standalone": true,
        "imports": ["RouterOutlet", "Footer"],
        "templateUrl": "./app.html",
        "styleUrl": "./app.scss"
      },
      "instructions": [
        "Standalone component",
        "Import RouterOutlet + Footer",
        "Pas de logique métier"
      ]
    },
    
    {
      "ordre": 13,
      "nom": "app.html",
      "path": "src/app/app.html",
      "type": "Template",
      "description": "Template root",
      "structure": [
        "<router-outlet />",
        "<app-footer />"
      ],
      "instructions": [
        "Pas de navbar (design sans navbar)",
        "Footer global en bas",
        "Minimal"
      ]
    },
    
    {
      "ordre": 14,
      "nom": "app.scss",
      "path": "src/app/app.scss",
      "type": "Styles",
      "description": "Styles root component",
      "instructions": [
        "Minimal",
        "Layout flex pour footer en bas"
      ]
    },
    
    {
      "ordre": 15,
      "nom": "modern-editorial.scss",
      "path": "src/shared/styles/variables/modern-editorial.scss",
      "type": "SCSS Variables",
      "description": "Palette Modern Editorial validée",
      "palette": {
        "primary": "#0A0A0A",
        "secondary": "#FFFFFF",
        "accent": "#E74C3C",
        "text": "#2C3E50",
        "bg-alt": "#F7F7F7"
      },
      "instructions": [
        "Variables SCSS complètes",
        "Map $colors pour boucles",
        "Export @use"
      ]
    },
    
    {
      "ordre": 16,
      "nom": "index.scss",
      "path": "src/shared/styles/index.scss",
      "type": "SCSS",
      "description": "Point d'entrée styles shared",
      "imports": [
        "@forward './variables/modern-editorial'",
        "@forward './mixins/mixins'",
        "@forward './artefacts/artefacts'"
      ],
      "instructions": [
        "Forward toutes variables",
        "Forward mixins existants",
        "Forward artefacts"
      ]
    },
    
    {
      "ordre": 17,
      "nom": "styles.scss",
      "path": "src/styles.scss",
      "type": "SCSS Global",
      "description": "Point d'entrée styles globaux",
      "imports": [
        "@use 'shared/styles' as *"
      ],
      "content": [
        "Reset CSS minimal",
        "Styles globaux body (font Inter)",
        "Styles globaux h1-h6 (font Playfair Display)",
        "Links sans underline",
        "Smooth scroll"
      ],
      "instructions": [
        "Reset box-sizing, margin, padding",
        "Body: font-family Inter, color $color-text",
        "Headings: Playfair Display",
        "html { scroll-behavior: smooth; }"
      ]
    },
    
    {
      "ordre": 18,
      "nom": "README.md",
      "path": "README.md",
      "type": "Documentation",
      "description": "Documentation projet",
      "sections": [
        "Titre: Plan & Co - Site Vitrine Copywriting",
        "Stack: Angular 20, Express, Supabase",
        "Installation: npm install",
        "Commandes: npm start, build",
        "Structure features",
        "Palette Modern Editorial"
      ],
      "instructions": [
        "Documentation claire",
        "Commandes essentielles",
        "Liens ARCHITECTURE-V2.md"
      ]
    }
  ],
  
  "validation_phase": {
    "criteres": [
      "Tous fichiers créés et validés",
      "npm install OK",
      "ng serve OK",
      "App affiche page blanche + footer",
      "Aucune erreur TypeScript",
      "Palette Modern Editorial appliquée"
    ],
    "commandes_test": [
      "npm install",
      "ng serve",
      "http://localhost:4200 → page blanche + footer"
    ]
  },
  
  "notes_importantes": [
    "Phase setup UNIQUEMENT (config)",
    "Aucun composant métier créé",
    "App démarre avec page blanche",
    "Footer global présent",
    "Pas de navbar (design sans navbar)",
    "Palette Modern Editorial intégrée",
    "1 fichier = 1 validation obligatoire"
  ]
}
